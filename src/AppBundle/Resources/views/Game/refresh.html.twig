{% if status == 0%}
    <div id="waitContainer">
        <p id="attente">Vous Ãªtes en attente pour la partie {{id}}</p>
    </div>
{%endif%}

{{ dump(board.getAExplosions) }}

{% for y, ligne in board.grid%}
    <div class="ligne">
        {% for x, case in ligne %}
            {% set caseSpecificClass = 'field' %}

            {% if case.item and case.item.nom == 'wall' %}
                {% set caseSpecificClass = 'wall' %}
            {% elseif case.item and case.item.nom == 'destruwall' %}
                {% set caseSpecificClass = 'destruwall' %}
            {% endif %}

            <div id="case_{{x}}_{{y}}" class="case {{ caseSpecificClass }} ">

                {% if case.player %}
                    <img class="player" src="{{asset('image/sprites/face.png')}}"/>
                {% endif %}

                {% if case.bomb %}
                    <img class="bomb" src="{{asset('image/bomb1.png')}}"/>
                {% endif%}
            </div>
        {% endfor%}
    </div>
{% endfor %}

<script>
    {% for explosion in board.getAExplosions %}
        {% for depth, coords in explosion.impacts %}
            {% for coord in coords %}
                $('<img />', {'class': 'boom', 'src': '{{asset('image/boom.png')}}'}).appendTo('#case_{{ coord.x }}_{{ coord.y }}');
            {% endfor %}
        {% endfor %}
    {% endfor %}
</script>
